@model OrderStatusViewModel
<div class="container">
    <h1>Order Detail</h1>

    <div class="row">
        <div class="col-md-6">
            <h4>Order Details</h4>
            <dl class="row">
                <dt class="col-sm-4">Order Number:</dt>
                <dd class="col-sm-8">@Model.OrderNumber</dd>

                <dt class="col-sm-4">Order Date:</dt>
                <dd class="col-sm-8">@Model.OrderDate</dd>

                <dt class="col-sm-4">Total:</dt>
                <dd class="col-sm-8">@Model.Total</dd>

                <dt class="col-sm-4">Status:</dt>
                <dd class="col-sm-8">@Model.Status</dd>
            </dl>
        </div>

        <div class="col-md-6">
            <form id="approveForm" method="post" >
                @Html.AntiForgeryToken()
                <input type="hidden" name="orderId" value="@Model.OrderNumber" />
                <div class="form-group">
                    <label asp-for="OrderNumber" class="control-label">Order Number:</label>
                    <input asp-for="OrderNumber" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="OrderStatusId" class="control-label">New Status:</label>
                    <select name="newStatusId" class="form-control">
                        @foreach (var status in Model.Statuses)
                        {
                            <option value="@status.OrderStatusId">@status.Name</option>
                        }
                    </select>
                </div>
                <button type="submit" asp-controller="Admin" asp-action="ApprovedUpdated" asp-route-orderId="@Model.OrderNumber" class="btn btn-primary">Update Status</button>
            </form>

        </div>
    </div>
</div>






